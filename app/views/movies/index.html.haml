-#  This file is app/views/movies/index.html.haml
%h2 All Movies

= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", "1", @ratings.include?(rating)
  = submit_tag 'Refresh'

%table#movies.table.table-striped.col-md-12
  %thead
    %tr
      %th{class: [@sortby == "title" && "hilite"]}= link_to "Movie Title", movies_path({sortby: (@sortby == "title" ? "none" : "title"), ratings: Hash[@ratings.collect { |item| [item, "1"] } ]})
      %th Rating
      %th{class: [@sortby == "release_date" && "hilite"]}= link_to "Release Date", movies_path({sortby: (@sortby == "release_date" ? "none" : "release_date"), ratings: Hash[@ratings.collect { |item| [item, "1"] } ]})
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
